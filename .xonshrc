$PROMPT_FIELDS['gitstatus.branch'].prefix = "{CYAN}\ue0a0"
$PROMPT_FIELDS['gitstatus.changed'].prefix = "{YELLOW}+"
$PROMPT_FIELDS['gitstatus.staged'].prefix = "{YELLOW}‚óè"

$XONSH_COLOR_STYLE = 'monokai'
$EDITOR = $(which vim)

# Paths
